{
    "manifest_version": 2,

    "name": "Netflix God Mode Extension",
    "description": "God Mode Extension for Netflix that allows for easy viewing of movies without scrolling",
    "version": "1.0",

    "browser_action": {
        "default_icon": "favicon.png"
    },

    "content_scripts": [
        {
            "matches": ["http://www.netflix.com/*", "https://www.netflix.com/*"],
            "js": ["underscore-min.js", "god-mode.js"]
        }
    ],

    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ]
}
